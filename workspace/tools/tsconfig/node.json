{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "CommonJS",
    "target": "ES2022",
    "types": ["node", "mocha"],
    "moduleResolution": "Node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true
  }
}
